<Page
    x:Class="Coffee.Views.Admin.TablePage.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Coffee.Views.Admin.TablePage"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="MenuPageCF"
    Title="MenuPage"
    d:DesignHeight="636"
    d:DesignWidth="695"
    DataContext="{StaticResource TableVM}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <!--  Sự kiện chuyển trang  -->
    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation
                        Storyboard.TargetName="MenuPageCF"
                        Storyboard.TargetProperty="Opacity"
                        From="0"
                        To="1"
                        Duration="0:0:0.5" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding loadMenuListIC}" />
            <i:InvokeCommandAction Command="{Binding loadProductTypeListIC}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid Background="{DynamicResource BackgroundCF}">
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            Margin="8,4,0,4"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Border
                Width="152"
                Height="35"
                Margin="5,0,0,0"
                BorderBrush="{DynamicResource MainColorCF}"
                BorderThickness="1.5"
                CornerRadius="16">
                <ComboBox
                    Width="140"
                    Height="23"
                    Margin="0,0,8,0"
                    Padding="12,2.4"
                    HorizontalAlignment="Right"
                    VerticalContentAlignment="Center"
                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                    materialDesign:TextFieldAssist.TextFieldCornerRadius="24"
                    BorderThickness="0"
                    DisplayMemberPath="LoaiSanPham"
                    FontFamily="Inter"
                    FontSize="15"
                    ItemsSource="{Binding ProductTypeList, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding SelectedProductType, UpdateSourceTrigger=PropertyChanged}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding selectedTypeProductIC}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>
            </Border>

            <Border
                Height="30"
                Margin="10,0,7,0"
                BorderBrush="Black"
                BorderThickness="1,0,0,0" />

            <!--  Search Box  -->
            <Border
                Height="35"
                Background="{DynamicResource Background2CF}"
                BorderBrush="DarkGray"
                BorderThickness="2"
                CornerRadius="16">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="25"
                        Height="23"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Foreground="Black"
                        Kind="Magnify" />
                    <TextBox
                        x:Name="searchBox"
                        Width="450"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        materialDesign:HintAssist.Hint="{DynamicResource Search}"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        TextAlignment="Left">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TextChanged">
                                <i:InvokeCommandAction Command="{Binding searchProductIC}" CommandParameter="{Binding ElementName=searchBox}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                </StackPanel>
            </Border>

        </StackPanel>
        <ScrollViewer
            x:Name="ScrollViewer"
            Grid.Row="1"
            Margin="4,0,4,4"
            VerticalAlignment="Top"
            HorizontalScrollBarVisibility="Hidden"
            PreviewMouseWheel="ScrollViewer_PreviewMouseWheel"
            VerticalScrollBarVisibility="Hidden">
            <ListView
                d:ItemsSource="{d:SampleData ItemCount=10}"
                ItemsSource="{Binding ProductList, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding SelectedProduct, UpdateSourceTrigger=PropertyChanged}">

                <ListView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource MaterialDesignListBoxItem}" TargetType="ListViewItem">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="IsSelected" Value="True" />
                                <Setter Property="Background" Value="{DynamicResource Background2CF}" />
                            </Trigger>
                        </Style.Triggers>

                        <Setter Property="materialDesign:ListBoxItemAssist.ShowSelection" Value="False" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Border
                                Width="150"
                                Height="160"
                                BorderBrush="{DynamicResource MainColorCF}"
                                BorderThickness="1.5"
                                CornerRadius="15"
                                Cursor="Hand">
                                <StackPanel>
                                    <Image
                                        Width="120"
                                        Height="92"
                                        Margin="0,15,0,0"
                                        Source="{Binding HinhAnh}" />
                                    <TextBlock
                                        Height="19"
                                        Margin="10,5,0,0"
                                        HorizontalAlignment="Left"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource MainColorCF}"
                                        Text="{Binding TenSanPham}" />

                                    <StackPanel Margin="0,2,0,0" Orientation="Horizontal">
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontSize="13.5"
                                            Text="SL: " />

                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontSize="13.5"
                                            Text="{Binding SoLuong}" />
                                    </StackPanel>
                                </StackPanel>

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseUp">
                                        <i:InvokeCommandAction Command="{Binding DataContext.addProductToBillIC, RelativeSource={RelativeSource AncestorType=ListView}}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>
